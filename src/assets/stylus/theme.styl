:root
  --theme #fafafa
  &.white
    --theme #fafafa
    --bg #fff
    --bgborder #f2f2f2
    --searchBg #fff
    --playBg rgba(255, 255, 255, 0.99)
    --searchcolor rgba(26,26,26,.5)
    --color #4a4a4a
    --theme_color #31c27c
    --c_txt1 rgba(26,26,26,1)
    --c_txt2 rgba(26,26,26,.5)
    --c_txt3 #4a4a4a
    --c_gray #ccc
    --bg_mask rgba(225, 225, 225, 0.6)
  &.black
    --theme #000
    --bg #000
    --bgborder #222
    --searchBg #333
    --playBg rgba(27, 29, 29, 0.99)
    --searchcolor #777
    --color #fff
    --theme_color #31c27c
    --c_txt1 #fff
    --c_txt2 hsla(0,0%,100%,0.6)
    --c_txt3 hsla(0,0%,100%,0.6)
    --c_gray #fff
    --bg_mask rgba(0, 0, 0, 0.6)
