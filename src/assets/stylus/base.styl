.common-extend
  display flex

.colorTheme
  color $color-theme

.hot_search_item_bg2
  background var(--searchBg)

.color1
  color var(--color)

.c_txt1
  color var(--c_txt1)

.c_txt2
  color var(--c_txt2)

input:focus
  outline-offset: -2px
.fade
  &.fade-enter, &.fade-leave-active
    transition all 0.3s ease-in-out
    opacity 0
  &.fade-enter-active, &.fade-leave-active
    transition all 0.3s ease-in-out

.slide-mv
  height 100%
  transition all ease .5s
  &.slide-left-enter, &.slide-right-leave-active
    transform translate3d(100%, 0, 0)
  &.slide-left-leave-active, &.slide-right-enter
    opacity 0
    transform translate3d(-100% 0, 0)

.fixTop
  position fixed
  top 0
  left 0
  right 0
  z-index 100

.mb100
  margin-bottom 100px
